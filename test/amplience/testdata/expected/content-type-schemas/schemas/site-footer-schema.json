{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema-examples.com/site-footer",
  "title": "Site Footer",
  "description": "The site configuration for the footer",
  "type": "object",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "properties": {
    "_meta": { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/meta" },
    "usps": {
      "title": "Usps",
      "type": "array",
      "minItems": 2,
      "maxItems": 4,
      "items": {
        "allOf": [
          {
            "$ref": "https://schema-examples.com/usp#/definitions/usp"
          }
        ]
      }
    },
    "navigation": {
      "title": "Navigation",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "description": "Use this to create a column of important links",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Title",
            "type": "string",
            "minLength": 0,
            "maxLength": 20
          },
          "links": {
            "title": "Links",
            "type": "array",
            "minItems": 1,
            "maxItems": 7,
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "propertyOrder": ["_meta", "usps", "navigation"],
  "required": ["_meta", "usps", "navigation"]
}
