{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema-examples.com/information-page",
  "title": "Information page",
  "description": "An information page",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "content": {
      "title": "Page content",
      "type": "array",
      "minItems": 0,
      "items": {
        "allOf": [
          { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
          {
            "properties": {
              "contentType": {
                "enum": ["https://schema-examples.com/markdown-block"]
              }
            }
          }
        ]
      }
    }
  }
}
